<%- include ("partials/head.ejs") %>

    <body>
        <%- include ("partials/navbar.ejs") %>

            <div class="container">
                <h1 class="titulo">Perguntas</h1>
                <a href="/perguntas" class="btn btn-success">Perguntar</a>
                <% perguntas.forEach(pergunta=> { %>
                    <div class="card">
                        <div class="card-header">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-body">
                            <p>
                                <%= pergunta.descricao %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/ <%= pergunta.id %> ">
                                <button class="btn btn-success">Responder</button>
                            </a>
                        </div>
                        <% }) %>
                    </div>
    </body>

    <%- include ("partials/footer.ejs") %>