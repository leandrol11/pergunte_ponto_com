<%- include ("partials/head.ejs") %>

    <body>
        <%- include ("partials/navbar.ejs") %>

            <div class="container">
                <div class="card">
                    <div class="card-body">
                        <h1 class="titulo">
                            <%= pergunta.titulo %>
                        </h1>
                        <p>
                            <%= pergunta.descricao %>
                        </p>
                    </div>
                </div>

                <% respostas.forEach((resposta=> {%>
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo %>
                            </p>
                        </div>
                    </div>
                    <%})) %>

                        <hr>
                        <form method="POST" action="/responder">
                            <h3 class="titulo-form">Resposta:</h3>
                            <textarea class="form-control" name="corpo" placeholder="Digite sua resposta"></textarea>
                            <button class="btn btn-success btn-resposta">Enviar</button>
                            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                        </form>
            </div>
    </body>

    <%- include ("partials/footer.ejs") %>